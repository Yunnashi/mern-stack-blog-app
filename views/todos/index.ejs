<% layout('layouts/boilerplate') %>
<h1>ToDoリスト</h1>
<div class="mb-3">
  <a href="/todos/new" class="btn btn-primary">新規登録</a>
</div>
<ol class="list-group">
  <% for(let todo of todos){ %>
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <a href="/todos/<%=todo.id %>">
        <div class="fw-bold"><%=todo.name %></div>
      </a>
      日付： <%= todo.date %> 優先順位： <%= todo.category %>
      <br />
      メモ： <%= todo.memo %>
    </div>
    <form action="/todos/<%=todo.id %>?_method=DELETE" method="POST">
      <button class="badge bg-secondary rounded-pill">削除</button>
    </form>
  </li>
  <% } %>
</ol>
